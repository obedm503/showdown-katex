{
  "name": "showdown-katex",
  "author": "obedm503",
  "homepage": "https://obedm503.github.io/showdown-katex/",
  "description": "katex extension for latex and asciimath in showdown (markdown + math)",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/showdown-katex.js",
  "jsnext:main": "./src/showdown-katex.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "start": "npm run clean && http-server & nodemon --watch src --exec 'npm run dist:umd'",
    "dist:umd": "BABEL_ENV=build rollup -c",
    "dist:umd:min": "BABEL_ENV=build rollup -c --environment MIN",
    "dist": "npm run dist:umd && npm run dist:umd:min",
    "prepublishOnly": "npm run clean && npm run dist",
    "test": "BABEL_ENV=test ava ./src/*.spec.js --verbose",
    "lint": "eslint ."
  },
  "npmName": "showdown-katex",
  "npmFileMap": [
    {
      "basePath": ".",
      "files": [
        "dist/*",
        "src/*"
      ]
    }
  ],
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/obedm503/showdown-katex.git"
  },
  "dependencies": {
    "katex": "^0.8.3"
  },
  "peerDependencies": {
    "showdown": "^1.4.3"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.6.1",
    "http-server": "^0.10.0",
    "nodemon": "^1.12.0",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "optionalDependencies": {},
  "engines": {
    "node": "*"
  }
}